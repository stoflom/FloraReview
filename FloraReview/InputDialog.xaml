<Window x:Class="FloraReview.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Enter Comment" Height="200" Width="400"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Name="PromptTextBlock" FontSize="14" Margin="0,0,0,10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
        <TextBox Name="CommentTextBox" Margin="0,0,0,10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                 Background="White" BorderBrush="#66BB6A" Foreground="#2E7D32" BorderThickness="1"
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" />

        <Button x:Name="OkButton" Width="100" Margin="10,0,0,0" Grid.Row="2" Grid.Column="1" Click="OkButton_Click">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Check" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="OK" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="CancelButton" Width="100" Margin="10,0,0,0" Grid.Row="2" Grid.Column="2" Click="CancelButton_Click">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Cancel" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Cancel" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
