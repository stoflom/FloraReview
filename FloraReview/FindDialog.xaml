<Window x:Class="FloraReview.FindDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Search" WindowStartupLocation="CenterOwner" Height="140" Width="570">

    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        
        <TextBox x:Name="SearchTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,0,10,0" />

        <StackPanel Grid.Row="1" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="Find" Click="FindButton_Click" Width="80">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FindInPage" />
                    <TextBlock Text="Find" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Previous" Click="PreviousButton_Click" Width="50" Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChevronLeft" />
                </StackPanel>
            </Button>
            <Button x:Name="Next" Click="NextButton_Click" Width="50" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                </StackPanel>
            </Button>
            <Button x:Name="ClearButton" Click="ClearButton_Click" Width="90" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Clear" />
                    <TextBlock Text="Clear" VerticalAlignment="Center" Margin="3,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Button x:Name="CloseButton" Grid.Row="1" Grid.Column="2" Click="CloseButton_Click" Width="90" Margin="5,0,0,0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Close" />
                <TextBlock Text="Close" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

