<Window x:Class="FloraReview.FindDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Search" WindowStartupLocation="CenterOwner" Height="140" Width="570">

    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="Find:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <TextBox x:Name="SearchTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" />
        
        <ToolBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan ="2 " Margin="5,0,0,0" >
            <Button x:Name="Find" Click="FindButton_Click" Width="80">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FindInPage" />
                    <TextBlock Text="Find" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Next" Click="NextButton_Click" Width="90">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                    <TextBlock Text="Next" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Previous" Click="PreviousButton_Click" Width="100">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChevronLeft" />
                    <TextBlock Text="Previous" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="ClearButton" Click="ClearButton_Click" Width="90">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Clear" />
                    <TextBlock Text="Clear" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="CloseButton" Click="CloseButton_Click" Width="90">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" />
                    <TextBlock Text="Close" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </ToolBar>
    </Grid>
</Window>

